<div id="<%= dom_id item %>">
  <div class= 'items'>
    <p class= 'grey'><%= item.name %></p>
    <div>
      <p class= 'grey'>&dollar;&nbsp;<%= item.amount %></p>
      <%= button_to "x", @item, method: :delete %>
    </div>
  </div>
  <p class= 'time time1'><%= item.created_at.strftime("%d %B %Y at %l:%M%P") %></p>
  <hr>
</div>
