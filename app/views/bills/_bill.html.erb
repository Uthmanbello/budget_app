<div id="<%= dom_id bill %>" class= 'bills-list'>
  <div class= 'bill-icon'>
    <% begin %>
      <%= image_tag bill.icon, alt: "Bill icon", class: 'icon' %>
    <% rescue Sprockets::Rails::Helper::AssetNotFound %>
      <%= image_tag 'default_icon.jpeg', alt: "Default icon", class: 'icon' %>
    <% end %>
  </div>

  <div class= 'flex-column'>
    <p class= 'text2'><%= bill.name %></p>
    <p class= 'time'><%= bill.created_at.strftime("%d %B %Y") %></p>
  </div>

  <div class= 'bill-total'>
    <p class= 'grey'>&dollar;&nbsp;<%= calculate_item_amount(bill) %></p>
  </div>

</div>
