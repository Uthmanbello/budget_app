<div id="bills">
  <div class= 'budget'>
    <p class= 'text2'>Total Budget</p>
    <p class= 'grey'>&dollar;45.00</p>
  </div>
  <% @bills.each do |bill| %>
    <%= link_to bill do %>
      <div class= 'bills'>
        <%= render bill %>
      </div>
    <% end %>
  <% end %>
</div>

<div class= 'big'>
  <div class= 'small'>
    <%= link_to "ADD", new_bill_path, class: 'white' %>
  </div>
</div>
