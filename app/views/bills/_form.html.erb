<%= form_with(model: bill) do |form| %>
  <% if bill.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(bill.errors.count, "error") %> prohibited this bill from being saved:</h2>

      <ul>
        <% bill.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='login'>
    <%= link_to bills_path do %>
      <i class="fa-solid fa-arrow-left fa-2x white"></i>
    <% end %>

    <p>NEW BILL</p>
    <div>
      <%= form.submit 'Save', class: 'submit-button' %>
    </div>
  </div>

  <div class='login-fields'>
    <div class="field login-field text1 padding">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class: 'input-field' %>
      <hr class= 'rule'>    
    </div>

    <div class="field login-field text1 padding">
      <%= form.label :icon, style: "display: block" %>
      <%= form.select :icon, ['default_icon', 'food', 'games', 'home', 'school', 'transportation'], { prompt: "select" }, class: "form-select input-field prompt" %>
    </div>

    <div>
      <%= form.hidden_field :author_id, value: current_user.id %>
    </div>
  </div>
<% end %>
